#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_sass-graph@2.2.5@sass-graph/bin/sassgraph" "$@"
  ret=$?
else 
  node  "$basedir/../../../_sass-graph@2.2.5@sass-graph/bin/sassgraph" "$@"
  ret=$?
fi
exit $ret
